<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.phototimegrouper.app">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />

    <application
        android:name=".PhotoTimeGrouperApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PhotoTimeGrouper"
        tools:targetApi="31">
        <!-- 新UI设计的MainActivity -->
        <activity
            android:name=".MainActivityNew"
            android:exported="true"
            android:theme="@style/Theme.PhotoTimeGrouper">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- 旧版MainActivity（保留用于兼容） -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.PhotoTimeGrouper" />

        <activity
            android:name=".PhotoDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.PhotoTimeGrouper" />

        <!-- 回收站预览界面（仅演示 UI） -->
        <activity
            android:name=".RecycleBinDemoActivity"
            android:exported="false"
            android:theme="@style/Theme.PhotoTimeGrouper" />

        <!-- 文件夹列表界面 -->
        <activity
            android:name=".FolderListActivity"
            android:exported="false"
            android:theme="@style/Theme.PhotoTimeGrouper" />

        <!-- 文件夹内照片列表界面 -->
        <activity
            android:name=".FolderPhotosActivity"
            android:exported="false"
            android:theme="@style/Theme.PhotoTimeGrouper" />
    </application>

</manifest>
