<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="320dp">

            <ImageView
                android:id="@+id/photoImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/surface_variant"
                android:contentDescription="@string/photo_image" />

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/videoPlayIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_media_play"
                android:background="@drawable/video_play_icon_background"
                android:visibility="gone"
                android:contentDescription="@string/video_play" />

            <!-- 选中遮罩 -->
            <View
                android:id="@+id/selectionOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#8000AA00"
                android:visibility="gone" />

            <!-- 勾选标记 -->
            <ImageView
                android:id="@+id/checkMark"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="top|end"
                android:layout_margin="8dp"
                android:src="@android:drawable/checkbox_on_background"
                android:background="@drawable/check_mark_background"
                android:visibility="gone"
                android:contentDescription="已选择" />

            <!-- 收藏星标 -->
            <ImageView
                android:id="@+id/favoriteIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="44dp"
                android:src="@drawable/ic_favorite_border"
                android:contentDescription="@string/favorite"
                android:visibility="visible" />

        </FrameLayout>

        <TextView
            android:id="@+id/timestampTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/photo_item_padding"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/text_secondary"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
